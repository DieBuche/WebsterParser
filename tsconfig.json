{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
